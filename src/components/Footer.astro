---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">
              Email: 
              <a title="电子邮件" href={`mailto:${SITE_EMAIL}`} target="_blank">{SITE_EMAIL}</a>
            </div>
          </div>

          <div class="item products">
            <div class="item-title">作品</div>
            <a href="/" target="_blank">本站</a>
          </div>

          <div class="item community">
            <div class="item-title">社媒</div>
            <a href="https://github.com/xxnuo" target="_blank">Github</a>
          </div>

          <div class="item resources">
            <div class="item-title">友链</div>
            <a href="https://the.top" target="_blank">TOP Link</a>
            <a href="https://news.the.top" target="_blank">TOP News</a>
          </div>
        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`2018-${year}  ${SITE_NAME}`}
          Powered by <a href="https://astro.build/" target="_blank">Astro</a>
          Theme <a href="https://github.com/austin2035/astro-air-blog" target="_blank">Air</a>
        </div>
      </div>
    </div>
  </div>
</div>
